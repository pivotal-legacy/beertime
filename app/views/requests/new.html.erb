<%= form_for @request, url: {action: "create"}, html: {class: 'form'} do |form| %>
<ul class='basic-list'>
<% @beers.each_with_index do |beer, index| %>
  <li>
    <div class="custom-checkbox">
      <%= check_box_tag 'request[beers][]', beer.id, false, { id: "beer_#{index}" } %>
      <%= label_tag "beer_#{index}", '' %>
    </div>
    <div class='item-details'>
      <span class="item-name"><%= beer.name %></span>
      <%= link_to("View More", beer.url, target: '_blank')%>
    </div>
  </li>
<% end %>
</ul>
<%= form.text_field :name, placeholder: 'Enter your name...' %>
<%= form.submit("Request") %>
<% end %>
